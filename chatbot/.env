# Confluence Chatbot Configuration

# Application Settings
APP_NAME=Confluence Chatbot
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Settings
HOST=0.0.0.0
PORT=8000
API_DATA_PATH=./api_data

# RAG Pipeline Settings
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_DOCUMENTS=1000
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.1

# Model Settings (for future LLM integration)
LLM_MODEL=microsoft/DialoGPT-medium
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7

# AWS Settings (for cloud deployment)
AWS_REGION=us-east-1
S3_BUCKET=confluence-chatbot-data
DYNAMODB_TABLE=confluence-chatbot-documents

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
SECRET_KEY=your-secret-key-here

# Performance Settings
WORKERS=1
TIMEOUT=300
MAX_FILE_SIZE=10485760  # 10MB

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=
LOG_FILE=logs/chatbot.log
